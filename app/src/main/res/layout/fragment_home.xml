<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="677dp"
        android:background="#0E0C0C">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/homeback"
            android:scaleType="center" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#25F7F7F7"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <Button
                android:layout_width="150dp"
                android:id="@+id/explore"
                android:layout_height="50dp"
                android:layout_marginTop="450dp"
                android:paddingLeft="7dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/ic_add_location_black_24dp"
                android:text="@string/explore"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/qr_scan"
                android:layout_width="350dp"
                android:layout_height="93dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/purple"
                android:text="QR코드 등록"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="bold" /><![CDATA[
            />
            />
            />
        ]]>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_gravity="center"
        android:foregroundGravity="center">

        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/b2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <ViewFlipper
                android:id="@+id/vf"
                android:layout_width="400dp"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="400dp"
                    android:layout_height="150dp"
                    android:background="@drawable/ho"
                    android:scaleType="fitEnd" />

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="400dp"
                    android:layout_height="150dp"
                    android:background="@drawable/ho3"
                    android:scaleType="fitEnd" />

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="400dp"
                    android:layout_height="150dp"
                    android:background="@drawable/ho2"
                    android:scaleType="fitEnd" />

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="400dp"
                    android:layout_height="150dp"
                    android:background="@drawable/ho4"
                    android:scaleType="fitEnd" />
            </ViewFlipper>

        </FrameLayout>

    </FrameLayout>


</LinearLayout>
