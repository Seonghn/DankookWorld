<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/information"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_splash"
            android:scaleType="centerCrop" />


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="600dp"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/qr_scan"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:background="@color/purple2"
                android:text="@string/cregister"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/qr_identify"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:background="@color/purple"
                android:text="@string/cscan"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold" />/>

            <Button
                android:id="@+id/qr_adjust"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:background="@color/purple2"
                android:text="@string/cregad"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold" />/>

            <Button
                android:id="@+id/qr_null"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:background="@color/purple"
                android:text="@string/cregcen"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold" />/>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>