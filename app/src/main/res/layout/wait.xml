<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app= "http://schemas.android.com/apk/res-auto"
    xmlns:tools= "http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        tools:context="MainActivity"
        tools:layout_editor_absoluteY="-125dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/waitImage" />

            <TextView
                android:id="@+id/res1_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/restaurant1"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/res1_ex"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="놀이기구 상세정보를 확인할 수 있어요"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
        </LinearLayout>


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/cir_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/res1_phone"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:text="@string/wait"
            android:textColor="@color/purple"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/waitT1"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="몇분"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/cir_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/res1_menu"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:text="운행시간"
            android:textColor="@color/purple"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/waitT2"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="@string/person2"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/cir_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/res1_time"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center|left"
            android:text="@string/attrationinfo"
            android:textColor="@color/purple"
            android:textSize="25sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/waitT3"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/waitT4"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>


