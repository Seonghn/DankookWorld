<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:background="@color/purple">

        <ImageView
            android:id="@+id/profile_imageview_event"
            android:layout_width="177dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nickname_textview_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="event1"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/title_textview_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/eventname"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/date_textview_event"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:drawableLeft="@drawable/ic_event_black_24dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/eventtime"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff" />

            <TextView
                android:id="@+id/content_textview_event"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="@string/eventlocation"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
